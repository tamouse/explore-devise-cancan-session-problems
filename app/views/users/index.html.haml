.container

  .page-header
    %h1 Listing users

  %table.table
    %thead
      %tr
        %th Name
        %th
        %th
        %th

    %tbody
      - @users.each do |user|
        %tr
          %td= user.name
          %td= link_to 'Show', user
          %td= link_to 'Edit', edit_user_path(user)
          - if can? :delete, user
            %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }
          - else
            &nbsp;

  %br

  - if can? :create, @user
    = link_to 'New User', new_user_path, class: "btn btn-default"
